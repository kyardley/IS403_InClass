
@{
    ViewBag.Title = "SelectedInstrument";
}

<h2>@ViewBag.Instrument Rentals: </h2>

<div class="alert alert-info">
    <strong>Remember: </strong>Once the 18 months has been achieved, you own the instrument. 
    If the instrument is returned at any time before 3 months there will be a $200 re-stocking fee. 
    If the instrument is returned after 3 months, any equity earned on the instrument is forfeited.
</div> 

<p><a href="@Url.Action("Rentals","Home")" class="btn btn-default">Back &raquo;</a></p>
<p><img src="@ViewBag.Src" /> </p>
<div class="row">
    <ul class="nav nav-pills">
        <li role="presentation" class="active"><a data-toggle="tab" href="#new">New</a></li>
        <li role="presentation"><a data-toggle="tab" href="#used">Used</a></li>
    </ul>

    <div class="tab-content row">
        <div id="new" class="tab-pane fade in active">
            <p> Price: @ViewBag.New </p>
        </div>
        <div id="used" class="tab-pane">
            <p> Price: @ViewBag.Used </p>
        </div>

    </div>
</div>


